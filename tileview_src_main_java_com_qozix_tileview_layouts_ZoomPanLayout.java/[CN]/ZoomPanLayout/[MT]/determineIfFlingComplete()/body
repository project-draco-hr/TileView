{
  if (mIsBeingFlung) {
    if (mFlingHandler.hasMessages(0)) {
      mFlingHandler.removeMessages(0);
    }
    int x=getScrollX();
    int y=getScrollY();
    if (x == flingFinalX && y == flingFinalY) {
      mIsBeingFlung=false;
      flingComplete();
    }
 else {
      mFlingHandler.sendEmptyMessageDelayed(0,FLYWHEEL_TIMEOUT);
    }
  }
}
