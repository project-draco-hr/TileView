{
  int scrollEndX=getScrollX() + (int)distanceX;
  int scrollEndY=getScrollY() + (int)distanceY;
  scrollTo(scrollEndX,scrollEndY);
  if (!mIsDragging) {
    mIsDragging=true;
    broadcastDragBegin(scrollEndX,scrollEndY);
  }
 else {
    broadcastDragUpdate(scrollEndX,scrollEndY);
  }
  return true;
}
