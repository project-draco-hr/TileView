{
  int scrollEndX=(int)(getScrollX() + distanceX);
  int scrollEndY=(int)(getScrollY() + distanceY);
  scrollTo(scrollEndX,scrollEndY);
  if (!mIsDragging) {
    mIsDragging=true;
    broadcastDragBegin(scrollEndX,scrollEndY);
  }
 else {
    broadcastDragUpdate(scrollEndX,scrollEndY);
  }
  return true;
}
