{
  scale=Math.max(scale,mMinScale);
  scale=Math.min(scale,mMaxScale);
  if (mScale != scale) {
    mScale=scale;
    updateScaledDimensions();
    postInvalidate();
    for (    ZoomPanListener listener : mZoomPanListeners) {
      listener.onScaleChanged(mScale);
      listener.onZoomPanEvent();
    }
  }
}
