{
synchronized (this) {
    if (isViewGroupValid() && (mQueue.size() > 0 || mExecutor.getActiveCount() > 0)) {
      mViewGroup.get().onRenderTaskCancelled();
    }
    for (    Future f : mFutureList) {
      if (!f.isDone()) {
        f.cancel(true);
      }
    }
    mQueue.clear();
    mFutureList.clear();
  }
}
