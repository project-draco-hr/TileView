{
  super(context,attrs,defStyleAttr);
  tileManager=new TileManager(context,detailManager);
  addView(tileManager);
  pathManager=new PathManager(context,detailManager);
  addView(pathManager);
  mScalingLayout=new ScalingLayout(context);
  addView(mScalingLayout);
  markerManager=new MarkerManager(context,detailManager);
  addView(markerManager);
  calloutManager=new CalloutManager(context,detailManager);
  addView(calloutManager);
  detailManager.addDetailLevelEventListener(this);
  tileManager.setTileRenderListener(this);
  addZoomPanListener(this);
  mRenderThrottleHandler=new RenderThrottleHandler(this);
  requestRender();
}
